{
    "env": {
      "commonjs": true,
      "node": true,
      "es6": true
    },
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "airbnb-base"],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["./src"],
          "extensions": [".js"]
        }
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "prefer-const": "warn",
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }